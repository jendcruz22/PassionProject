@{
    ViewBag.Title = "New";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Movie/List">Back to Home</a>
    </nav>
</div>

<h2>New Movie</h2>

<form method="POST" action="/Movie/Create">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="poster">Poster Link: </label>
            <input type="text" name="poster" id="poster" />
        </div>
        <div class="form-group">
            <label for="name">Movie Name: </label>
            <input type="text" name="name" id="name" />
        </div>
        <div class="form-group">
            <label for="genre">Genre: </label>
            <input type="text" name="genre" id="genre" />
        </div>
        <div class="form-group">
            <label for="description">Description: </label>
            <input type="text" name="description" id="description" />
        </div>
        <div class="form-group">
            <label for="dor">Date of Release: </label>
            <input type="date" name="dor" id="dor" />
        </div>
        <div class="form-group">
            <label for="cost">Cost of renting: </label>
            <input type="text" name="cost" id="cost" />
        </div>
        <div>
            <input class="btn btn-default" type="submit" value="Create Movie" />
        </div>
    </div>
</form>


