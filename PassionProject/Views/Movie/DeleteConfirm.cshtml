@model PassionProject.Models.Movie

@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Movie/Show/@Model.Id">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.Name?</h2>
    <p>This action cannot be undone.</p>

    <form method="POST" action="/Movie/Delete/@Model.Id">
        <button class="delbutton">
            Confirm Delete
        </button>
    </form>

</div>


