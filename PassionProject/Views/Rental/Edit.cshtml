@model PassionProject.Models.Rental

@{
    ViewBag.Title = "Edit";
}

<form action="/Rental/Update/@Model.Id" method="post">
    <div class="form-horizontal">
        <h2>Update Rental</h2>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2" for="fName">First Name:</label>
            <div class="col-md-10">
                <input type="text" name="fName" id="fName" value="@Model.FName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="lName">Last Name:</label>
            <div class="col-md-10">
                <input type="text" name="lName" id="lName" value="@Model.LName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="fDate">From Date:</label>
            <div class="col-md-10">
                <input type="date" name="fDate" id="fDate" value=@Model.FDate.ToString("yyyy-MM-dd") class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="tDate">To Date:</label>
            <div class="col-md-10">
                <input type="date" name="fDate" id="tDate" value=@Model.TDate.ToString("yyyy-MM-dd") class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

